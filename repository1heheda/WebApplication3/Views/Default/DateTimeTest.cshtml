
@{
    Layout = null;
}

<!DOCTYPE html>
@*<script src="~/Content/picker-master/jquery-1.10.2.min.js"></script>*@
<script src="~/Content/picker-master/demo/fastclick.js"></script>
<script src="~/Content/picker-master/zepto.min.js"></script>
<script src="~/Content/picker-master/demo/gmu.js"></script>
<script src="~/Content/picker-master/build/picker.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DateTimeTest</title>
</head>
<body>
    <div>
      <input id="name" value="test" />   
    </div>
    <script type="text/javascript">

        $(function () {
            var $name = $('#name');

            var data1 = [
                {
                    text: '小美',
                    value: 1
                }, {
                    text: '猪猪',
                    value: 2
                }
            ];

            var data2 = [
                {
                    text: '张三',
                    value: 1
                },
                {
                    text: '李四',
                    value: 2
                },
                {
                    text: '王五',
                    value: 3
                }
            ];

            var data3 = [
                {
                    text: '开心',
                    value: 1
                }, {
                    text: '生气',
                    value: 2
                },
                {
                    text: '难过',
                    value: 3
                }
            ];

            $name.picker({
                data: [data1, data2, data3],
                selectIndex: [0, 1, 2],
                title: '我们都是小学生'
            }).on('picker.select', function (e, selectVal, selectIndex) {
                alert('select');
                //alert(data1[selectIndex[0]].text + ' ' + data2[selectIndex[1]].text + ' ' + data3[selectIndex[2]].text);
                $(this).val(data1[selectIndex[0]].text + ' ' + data2[selectIndex[1]].text + ' ' + data3[selectIndex[2]].text);
            }).on('picker.change', function (e, index, selectIndex) {
               // console.log(index);
                alert('change');
            }).on('picker.valuechange', function (e, selectVal, selectIndex) {
                //console.log(selectVal);
                alert('valuechange');
            });

            $name.on('click', function () {
                $(this).picker('show');
            });


        });



    </script>
</body>
</html>
